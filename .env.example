# =============================================================================
# Sherpa Marketing â€” Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values.

# ---------- App ----------
# For local dev:
NEXTAUTH_URL=http://localhost:3000
# For Render deploy, set this to your Render URL:
# NEXTAUTH_URL=https://sherpa-marketing.onrender.com

NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32

# Encryption key for provider tokens at rest (32-byte hex)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
APP_ENCRYPTION_KEY=

# ---------- Database (Postgres) ----------
DATABASE_URL=postgresql://user:password@localhost:5432/sherpa_marketing?schema=public

# ---------- Redis ----------
REDIS_URL=redis://localhost:6379

# ---------- Auth Providers ----------
# Google OAuth (optional, for Google sign-in)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Email (for magic link auth)
EMAIL_SERVER_HOST=smtp.example.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=
EMAIL_SERVER_PASSWORD=
EMAIL_FROM=noreply@example.com

# ---------- Meta / Facebook ----------
META_APP_ID=
META_APP_SECRET=

